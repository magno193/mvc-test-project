@model Ciatecnica.Models.Client
@{
	ViewData["Title"] = "Clientes | Create";
}

<section class="container">
	<h2 class="text-left font-weight-bold text-light bg-dark p-2">
		<i class="fas fa-user"></i> Crie um cliente
	</h2>
	<form method="post" asp-action="Create" class="border p-3">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-row">
			<div class="form-group col-4">
				<label class="font-weight-bold">Selecione o tipo:</label>
				<select class="form-control custom-select" data-type asp-for="Type">
					<option selected>Pessoa Física</option>
					<option>Pessoa Jurídica</option>
					<span asp-validation-for="Type" class="text-danger"></span>
				</select>
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-4">
				<label class="font-weight-bold" data-label="name">Nome:</label>
				<span asp-validation-for="NameCorporateName" class="text-danger"></span>
				<input class="form-control" type="text" data-input="name" asp-for="NameCorporateName">
			</div>
			<div class="form-group col-4">
				<label class="font-weight-bold" data-label="surname">Sobrenome:</label>
				<span asp-validation-for="SurnameTradeName" class="text-danger"></span>
				<input class="form-control" type="text" data-input="surname" asp-for="SurnameTradeName">
			</div>
			<div class="form-group col-4" data-group="birthday">
				<label class="font-weight-bold" data-label="birthday">Data de nascimento:</label>
				<span asp-validation-for="Birthday" class="text-danger"></span>
				<input class="form-control" type="date" asp-for="Birthday">
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-4">
				<label class="font-weight-bold" data-label="cpf">CPF: </label>
				<span asp-validation-for="CpfCnpj" class="text-danger"></span>
				<input type="text" class="form-control" data-input="cpf" asp-for="CpfCnpj">
			</div>
		</div>
		<hr>
		<div class="form-row">
			<div class="form-group col-4">
				<label class="font-weight-bold">CEP:</label>
				<span asp-validation-for="ZipCode" class="text-danger"></span>
				<input type="text" class="form-control" data-address="cep" asp-for="ZipCode" placeholder="Enter para pesquisar">
			</div>
			<div class="form-group col-3 d-flex">
				<button type="button" class="btn btn-info w-100 mt-auto" data-search>
					<i class="fas fa-search"></i>
					<span class="font-weight-bold">Pesquisar</span>
				</button>
			</div>
		</div>
		<hr>
		<div class="form-row">
			<div class="form-group col-4">
				<label class="font-weight-bold">Cidade:</label>
				<span asp-validation-for="City" class="text-danger"></span>
				<input type="text" class="form-control form-control-sm" data-address="address-city" readonly asp-for="City">
			</div>
			<div class="form-group col-2">
				<label class="font-weight-bold">UF:</label>
				<span asp-validation-for="State" class="text-danger"></span>
				<input type="text" class="form-control form-control-sm" data-address="address-state" readonly asp-for="State">
			</div>
			<div class="form-group col-6">
				<label class="font-weight-bold">Endereço:</label>
				<span asp-validation-for="Address" class="text-danger"></span>
				<input type="text" class="form-control form-control-sm" data-address="address" readonly asp-for="Address">
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-3">
				<label class="font-weight-bold">Número:</label>
				<span asp-validation-for="AddressNumber" class="text-danger"></span>
				<input type="text" class="form-control form-control-sm" data-address="address-number" asp-for="AddressNumber">
			</div>
			<div class="form-group col-4">
				<label class="font-weight-bold">Complemento:</label>
				<span asp-validation-for="AddressComplement" class="text-danger"></span>
				<input type="text" class="form-control form-control-sm" data-address="address-complement"
					asp-for="AddressComplement">
			</div>
			<div class="form-group col-5">
				<label class="font-weight-bold">Bairro:</label>
				<span asp-validation-for="District" class="text-danger"></span>
				<input type="text" class="form-control form-control-sm" data-address="address-district" asp-for="District">
			</div>
		</div>
		<hr>
		<div class="form-row">
			<div class="btn-group ml-auto">
				<button type="submit" class="btn btn-success w-100 font-weight-bold d-flex" value="Create">
					<i class="fas fa-plus m-auto"></i>
					<span class="ml-2">Salvar</span>
				</button>
				<a asp-action="Index" class="btn btn-secondary w-100 font-weight-bold d-flex">
					<i class="fas fa-sign-out-alt m-auto"></i>
					<span class="ml-2">Voltar</span>
				</a>
			</div>
		</div>
	</form>
</section>

@section Scripts {
@{
	<script src="~/js/customValidation.js"></script>
	<partial name="_ValidationScriptsPartial" />
}
}
